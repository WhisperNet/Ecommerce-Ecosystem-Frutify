<% layout('boilerplate') %>
    <div class="row ">
        <form action="/product" method="post" class="needs-validation mx-auto col-md-6" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Product Name</label>
                <input type="text" name="product[name]" id="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input type="text" name="product[description]" id="description" class="form-control" required>
            </div>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="image">Image</label>
                    <input type="text" name="product[image]" id="image" class="form-control" required>
                </div>
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="price">Price</label>
                    <input type="number" name="product[price]" id="price" class="form-control" required>
                </div>
            </div>

            <button class="btn btn-success">Save</button>
        </form>
    </div>